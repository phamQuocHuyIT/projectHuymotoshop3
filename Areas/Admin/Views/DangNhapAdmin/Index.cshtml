@model doAnChuyenNghanh02.Models.TAIKHOANNHANVIEN
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="panel panel-danger" style="margin-top: 10%">
    <div class="panel-heading"><h3 class="text-center">Đăng nhập</h3></div>
    <div class="panel-body">
        @using (Html.BeginForm("CheckDangNhap", "DangNhapAdmin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-4">Tên đăng nhập</label>
                    <div class="col-sm-8">
                        <input name="tendn" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-4">Mật khẩu</label>
                    <div class="col-sm-8">
                        <input name="password" class="form-control" type="password" />
                    </div>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="text-danger">@ViewBag.Error</div>
                }
            </div>
            <button type="submit" class="btn btn-danger" style="float: right">Đăng nhập</button>
        }
    </div>
</div>
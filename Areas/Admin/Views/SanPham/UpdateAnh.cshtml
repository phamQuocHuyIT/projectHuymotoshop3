
@{
    ViewBag.Title = "UpdateAnh";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-sm-8" style="margin-top: 10%">
    <h3>Cập nhập hình ảnh</h3>
    @using (Html.BeginForm("UpdateAnh", "SanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
     {
        <input type="hidden" name="idsp" value="@Session["idsp"]" />
        <label >Chọn ảnh</label>
        <input type="file" name="fileAnh" />
        <p style="color:red">
            @ViewBag.Erorr
        </p>
        <button type="submit" class="btn btn-default">Thêm ảnh</button>
     }
</div>

